<p id="notice"><%= notice %></p>

<h1>Publicaciones</h1>

<table>
  <thead>
    <tr>
      <th>Contenido</th>
      <th>Usuario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @publicaciones.each do |publicacion| %>
      <tr>
        <td><%= publicacion.contenido %></td>
        <td><%= publicacion.usuario_id %>
        <%# publicacion.usuario.nombre %></td>
        <td><%= link_to 'Show', publicacion %></td>
        <td><%= link_to 'Edit', edit_publicacion_path(publicacion) %></td>
        <td><%= link_to 'Destroy', publicacion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

